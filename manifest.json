{
  "name": "Clean Trovo",
  "description": "Extension to make Trovo interface cleaner",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_title": "Clean Trovo"
  },
  "content_scripts": [
    {
      "matches": ["https://trovo.live/*"],
      "js": ["main.js"],
      "css": ["style.css"],
      "run_at": "document_start"
    }
  ]
}
